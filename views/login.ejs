<!DOCTYPE html>

<html lang="pl">

<head>
    <% include partials/head %>
</head>

<body>
    <% include partials/nav %>


    <div class="container login-container">

        <% if(typeof errors == 'object' && errors){ errors.forEach(function(error){ %>
            <div class="alert alert-danger" role="alert">
                <%= error.msg %>
              </div>
         <%   }); }%>

        <% if(typeof success === 'string' && success){ %>
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
        <%   } %>

        <div class="row">
            <section class="col form-container">
               <h2>Stwórz konto</h2>
                <form method="post" action="/login/signup">
                   <div class="form-group">
                        <label for="name">Nazwa</label>
                        <input name="name" type="text" class="form-control" id="name" placeholder="np. Elipsa8" required pattern=".{4,}" title="Nazwa musi zawierać co najmniej 4 znaki!">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input name="email" type="email" class="form-control" id="email" placeholder="Podaj adres email" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Podaj hasło</label>
                        <input name="password" type="password" class="form-control" id="password" placeholder="Hasło" required pattern=".{6,32}" title="Hasła muszą mieć od 6 do 32 znaków!">
                    </div>
                    <div class="form-group">
                        <label for="password-repeat">Powtórz hasło</label>
                        <input name="password-repeat" type="password" class="form-control" id="password-repeat" placeholder="Hasło" required>
                    </div>
                    
                    <button type="submit" class="btn btn-block btn-primary">Dodaj użytkownika</button>
                </form>
            </section>
            
            <section class="col form-container">
               <h2>Zaloguj się</h2>
                <form method="post" action="/login/signin" autocomplete="on">
                   <div class="form-group">
                        <label for="email">Email</label>
                        <input name="email" type="email" class="form-control" id="email-login" placeholder="Twój adres email" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Podaj hasło</label>
                        <input name="password" type="password" class="form-control" id="password-login" placeholder="Hasło" required>
                    </div>
                    <div class="form-group">
                        <a href="/login/forgottenpassword">Zapomniałem hasła</a>
                    </div>
                
                    <button type="submit" class="btn btn-block btn-primary">Zaloguj się</button>
                </form>
            </section>
        </div>
    </div>

    <video autoplay muted loop class="background-video">
      <source src="https://ak5.picdn.net/shutterstock/videos/20148355/preview/stock-footage-young-man-teenager-eating-doner-kebab-at-the-city-park-autumn-day.mp4" type="video/mp4">
    </video>

    <% include partials/scripts %>
</body>

</html>
