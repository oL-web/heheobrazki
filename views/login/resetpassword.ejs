<!DOCTYPE html>

<html lang="pl">

<head>
    <% include ../partials/head %>
</head>

<body>
    <% include ../partials/nav %>


        <div class="container login-container">

            <% if(typeof errors === 'object' && errors){ errors.forEach(function(error){ %>
                <div class="alert alert-danger" role="alert">
                    <%= error.msg %>
                </div>
                <%   }); }%>

            <% if(typeof success === 'string' && success){ %>
                <div class="alert alert-success" role="alert">
                    <%= success %>
                </div>
                <%   } %>

<div class="row">
        <section class="col form-container">
            <h2>Zresetuj hasło</h2>
            <form method="post" autocomplete="off">
                <div class="form-group">
                    <label for="password">Podaj nowe hasło</label>
                    <input name="password" type="password" class="form-control" id="password" placeholder="Hasło" required pattern=".{6,32}" title="Hasła muszą mieć od 6 do 32 znaków!">
                </div>
                <div class="form-group">
                    <label for="password-repeat">Powtórz hasło</label>
                    <input name="password-repeat" type="password" class="form-control" id="password-repeat" placeholder="Hasło" required>
                </div>

                <button type="submit" class="btn btn-block btn-primary">Zmień hasło</button>
            </form>
        </section>
</div>

        <video autoplay muted loop class="background-video">
            <source src="https://ak2.picdn.net/shutterstock/videos/20148352/preview/stock-footage-young-man-teenager-eating-doner-kebab-at-the-city-park-autumn-day.mp4"
                type="video/mp4">
        </video>

        <% include ../partials/scripts %>
</body>

</html>